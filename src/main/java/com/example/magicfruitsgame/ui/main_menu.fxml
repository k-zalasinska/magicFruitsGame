<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.magicfruitsgame.controller.MainMenuController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox alignment="CENTER" spacing="10">
        <Label text="Magic Fruits Game" style="-fx-font-size: 24pt;" />
        <Button text="Play" onAction="#handlePlay" />
        <Button text="Options" onAction="#handleOptions" />
        <Button text="Exit" onAction="#handleExit" />
    </VBox>
</AnchorPane>