<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.magicfruitsgame.controller.SlotMachineController"
            prefWidth="500" prefHeight="350"
            fx:id="mainBorderPane"
            stylesheets="@styles.css">

    <!-- Background Image -->
    <ImageView fx:id="slotMachineImageView" fitWidth="1540" fitHeight="890">
        <Image url="/views/background.jpg"/>
    </ImageView>


    <Pane fx:id="labelsPane" styleClass="labels-container">
        <VBox>
            <Label fx:id="balanceLabel" styleClass="balance-label"/>
            <Label fx:id="lastWinLabel" styleClass="last-win-label"/>
            <Label fx:id="stakeLabel" styleClass="stake-label"/>
        </VBox>
    </Pane>

    <center>
        <GridPane fx:id="reelsImageViews">
            <children>
                <ImageView>
                    <Image url="/symbols/symbol_cherry.png"/>
                </ImageView>
                <ImageView>
                    <Image url="/symbols/symbol_orange.png"/>
                </ImageView>
                <ImageView>
                    <Image url="/symbols/symbol_pineapple.png"/>
                </ImageView>
                <ImageView>
                    <Image url="/symbols/symbol_plum.png"/>
                </ImageView>
                <ImageView>
                    <Image url="/symbols/symbol_seven.png"/>
                </ImageView>
                <ImageView>
                    <Image url="/symbols/symbol_strawberry.png"/>
                </ImageView>
                <ImageView>
                    <Image url="/symbols/symbol_watermelon.png"/>
                </ImageView>
            </children>
        </GridPane>

    </center>

    <bottom>
        <HBox>
            <Button fx:id="payInButton" styleClass="payIn" onAction="#handlePayInButton"/>
            <TextField fx:id="depositAmountField"/>
        </HBox>


    </bottom>
    <top>
        <HBox>
            <Button fx:id="startButton" styleClass="button"/>

        </HBox>
    </top>


</BorderPane>
