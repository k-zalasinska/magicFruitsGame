<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.magicfruitsgame.controller.SlotMachineController"
            prefWidth="500" prefHeight="350"
            fx:id="mainBorderPane"
            stylesheets="@styles.css">

    <!-- Background Image -->
    <ImageView fx:id="slotMachineImageView" fitWidth="1540" fitHeight="890">
        <image>
            <Image url="/views/background.jpg"/>
        </image>
    </ImageView>

    <!-- Labels for Balance, Last Win, and Stake -->
    <bottom>
        <VBox alignment="CENTER">
            <Label fx:id="balanceLabel" text="Balance:" styleClass="label"/>
            <Label fx:id="lastWinLabel" text="Last Win:" styleClass="label"/>
            <Label fx:id="stakeLabel" text="10" styleClass="stake-label"/>


        </VBox>
    </bottom>

    <center>
        <GridPane fx:id="reelsGridPane">
            <!-- Reels ImageView -->
            <ImageView fx:id="reelImageView1_1" styleClass="reel-image" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <ImageView fx:id="reelImageView1_2" styleClass="reel-image" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <ImageView fx:id="reelImageView1_3" styleClass="reel-image" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
            <ImageView fx:id="reelImageView2_1" styleClass="reel-image" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <ImageView fx:id="reelImageView2_2" styleClass="reel-image" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <ImageView fx:id="reelImageView2_3" styleClass="reel-image" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            <ImageView fx:id="reelImageView3_1" styleClass="reel-image" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <ImageView fx:id="reelImageView3_2" styleClass="reel-image" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <ImageView fx:id="reelImageView3_3" styleClass="reel-image" GridPane.columnIndex="2" GridPane.rowIndex="2"/>

        </GridPane>
    </center>

    <bottom>

        <Button fx:id="depositButton" text="" styleClass="button" prefWidth="250" prefHeight="125"/>

    </bottom>
    <top>
        <HBox alignment="TOP_LEFT">
            <!-- Placeholder for spacing -->
            <Region prefWidth="30"/>

            <Button fx:id="startButton" text="" styleClass="button" prefWidth="800" prefHeight="600"/>
        </HBox>
    </top>


</BorderPane>
